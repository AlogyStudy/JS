<div class="container">

    <h3>上传照片</h3>

    <!-- 相册列表-->
    <div class="col-lg-4">

        <form action="/dopost" method="post" enctype="multipart/form-data">
            <p>请选择您要上传的文件夹</p>
            <p>
                <select name="wenjianjia" id="" class="form-control">
                    <%for( var i=0; i<albums.length; ++i ){%>

                        <option value="<%=albums[i]%>"><%=albums[i]%></option>

                    <%
                        }
                    %>
                </select>
            </p>
            <p>
                请选择要上传的文件：
            </p>
            <p>
                <input type="file" name="tupian">
            </p>
            <h4>
                <button type="submit" class="btn btn-success">上传</button>
            </h4>
        </form>
        
    </div>
</div>


